.body {
    width: 100vw;
    height: 100vh;
    background-color: #fff;
}

.info {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-top: 40rpx;
}

.info .info-item {
    display: flex;
    justify-content: space-between;
    width: 90%;
    align-items: center;
    height: 200rpx;
    border-bottom: 4rpx solid #f3f3f3;
}

.info .info-item .avatarUrl {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    border: 1rpx solid #ff70b4;
}

.contact-right {
    display: flex;
    align-items: center;
}

.contact-right .phone-display{
    margin-right: 40rpx;
    font-size: 28rpx;
}
.contact-right .edit-input {
    border: 2rpx solid #f3f3f3;
    padding: 5px 10rpx;
    /* margin-right: 20rpx; */
    font-size: 26rpx;
}

.contact-right .edit {
    position: relative;
    padding-right: 20rpx;
}

.contact-right .edit .close-icon {
    position: absolute;
    width: 25rpx;
    height: 25rpx;
    right: 55rpx;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
}

.contact-right .edit-status .edit-icon {
    width: 40rpx;
    height: 40rpx;
}

.btn{
    width: 80% !important;
    background-color: #ff70b4;
    color: #fff;
    margin-top: 50rpx;
}